flake.nix -- Entry point
homes/ -- User definitions
	<user>/
		*.nix
hosts/ -- Machine definitions
	<machine>/
		hardware-config.nix
		default.nix
		*.nix
lib/ -- Self defined functions
modules/ -- Option declarations
	home/
		<module>.nix
	system/
		<module>.nix
overlays/ -- Self made overlays
pkgs/ -- Self packaged stuff
